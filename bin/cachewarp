#!/usr/bin/env ruby
require_relative '../lib/cachewarp'
begin
  require 'cachewarp'
rescue LoadError
end

if ARGV.empty? || (['-h', '--help', '?'].include? ARGV[0])
  puts "Usage   : ruby cachewarp <name of site ending with />" +
           "\nExample : ruby cachewarp http://www.google.com/ #==> Prints 'Not Cached'"
  exit(0)
end

CacheWarp.new(ARGV[0]).is_cached? ? (puts "Cached"; exit(0)) : (puts "Not Cached"; exit(-1))
